<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.TodoList"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:icon="@drawable/freeiconmaker_0"
        android:label="ClassChat"
        android:title="ClassChat" >
        <activity
            android:name=".ClassChat"
            android:label="ClassChat" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Classes"
            android:label="Classes"
            android:parentActivityName=".ClassChat" >
        </activity>
        <activity
            android:name=".Questions"
            android:label="@string/title_activity_questions"
            android:parentActivityName=".Classes" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Classes" />
        </activity>
        <activity
            android:name=".Comments"
            android:label="@string/title_activity_comments"
            android:parentActivityName=".Questions" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.TodoList.Questions" />
        </activity>
        <activity
            android:name=".Register"
            android:label="@string/title_activity_register"
            android:parentActivityName=".ClassChat" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.TodoList.ClassChat" />
        </activity>
    </application>

</manifest>
